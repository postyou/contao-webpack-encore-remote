{
    "name": "postyou/contao-webpack-encore-remote-bundle",
    "type": "contao-bundle",
    "description": "Webpack Encore Remote Converter Contao 4 bundle",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Mario Gienapp",
            "homepage": "https://github.com/thedyingmountain"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "contao/core-bundle": "^4.6",
        "guzzlehttp/guzzle": "~6.0",
        "maennchen/zipstream-php" : "^1.0"
    },
    "conflict": {
        "contao/core": "*",
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "doctrine/doctrine-cache-bundle": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.12",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/message-factory": "^1.0.2",
        "phpunit/phpunit": "^5.7.26",
        "symfony/phpunit-bridge": "^3.2"
    },
    "extra": {
        "contao-manager-plugin": "Postyou\\WebpackEncoreRemoteBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Postyou\\WebpackEncoreRemoteBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Postyou\\WebpackEncoreRemoteBundle\\Tests\\": "tests/"
        }
    }
}
